<!doctype html>
<html>
<head>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<%- include partial/navigation.ejs %>
	</div>

	<div class="row">

		<div class="col-sm-6">
			<div class="well">
				<% if (user.local_email) { %>
				<h3><span class="fa fa-user"></span> Local</h3>
					<p>
						<strong>email</strong>: <%= user.local_email %><br>
					</p>

				<% } else if (user.facebook_token){ %>
				<h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
					<p>
						<strong>email</strong>: <%= user.facebook_email %><br>
						<strong>name</strong>: <%= user.facebook_name %><br>
					</p>
				<% } else if (user.google_token){ %>
				<h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>
					<p>
						<strong>email</strong>: <%= user.google_email %><br>
						<strong>name</strong>: <%= user.google_name %>
				</p>
				<% } %>

			</div>
		</div>

</div>
</body>
</html>
